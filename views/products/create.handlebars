<h1 class="text-2xl font-bold mb-6">Thêm sản phẩm mới</h1>

<form action="/products" method="POST" enctype="multipart/form-data" class="space-y-4">
    <div>
        <label class="block mb-1">Tên sản phẩm</label>
        <input type="text" name="name" class="border px-3 py-2 rounded w-full" required />
    </div>
    <div>
        <label class="block mb-1">Mô tả</label>
        <textarea name="description" class="border px-3 py-2 rounded w-full"></textarea>
    </div>
    <div>
        <label class="block mb-1">Giá</label>
        <input type="number" name="price" step="0.01" class="border px-3 py-2 rounded w-full" required />
    </div>
    <div>
        <label class="block mb-1">Danh mục</label>
        <input type="text" name="category" class="border px-3 py-2 rounded w-full" />
    </div>
    <div>
        <label class="block mb-1">Trạng thái</label>
        <select name="status" class="border px-3 py-2 rounded w-full">
            <option value="active">Đang bán</option>
            <option value="inactive">Ngừng bán</option>
        </select>
    </div>
    <div>
        <label class="block mb-1">Ảnh</label>
        <input type="file" name="image" class="border px-3 py-2 rounded w-full" />
    </div>
    <div>
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Thêm sản phẩm</button>
        <a href="/products" class="ml-2 text-gray-600">Hủy</a>
    </div>
</form>